<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="LanzadorWPF.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="LanzadorWPF"
	Width="300"
	Height="417"
	x:Name="window1">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<WrapPanel Grid.Row="0">
			<ListView
			Name="lstApp">
				<ListViewItem></ListViewItem>
				<ListViewItem></ListViewItem>
			</ListView>			
		</WrapPanel>
		<WrapPanel Grid.Row="1">
			<Button
				Name="btnLanzar"
				Click="btnLazar_Click"
				Height="30">Lanzar</Button>
			<Button
				Name="btnAgregar"
				Click="btnAgregar_Click"
				Width="30"
				Background="#FF36FF32">+</Button>
			<Button
				Name="btnEliminar"
				Click="btnEliminar_Click"
				Width="30"
				Background="#FFF90717">-</Button>
			<Button
				Name="btnReiniciar"
				Click="btnReiniciar_Click"
				Width="30">Reiniciar</Button>
		</WrapPanel>
	</Grid>
</Window>